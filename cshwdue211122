#inputing a number
num1 = float(input("please enter a number: "))
#inputing a number
num2 = float(input("please enter another number: "))
#if num1 is the greater of the two numbers
if num1>num2:

    print(str(num1)+" is greater than "+str(num2))
    print(str(num1)+" is "+str((num1-num2)/num2*100.0)+"% greater than "+str(num2))
elif num2>num1:
    print(str(num2)+" is greater than "+str(num1))
    print(str(num2)+" is "+str((num2-num1)/num1*100.0)+"% greater than "+str(num1))
